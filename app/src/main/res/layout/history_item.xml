<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp"
    app:cardBackgroundColor="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            style="@style/TexContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="@string/date_now"
            app:layout_constraintStart_toEndOf="@id/title_date"
            app:layout_constraintTop_toTopOf="@id/title_date"
            app:layout_constraintBottom_toBottomOf="@id/title_date"/>

        <TextView
            android:id="@+id/title_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TexContent"
            android:text="@string/mode"
            app:layout_constraintTop_toBottomOf="@id/title_date"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="@string/single_player"
            app:layout_constraintStart_toEndOf="@id/title_mode"
            app:layout_constraintTop_toTopOf="@id/title_mode"
            app:layout_constraintBottom_toBottomOf="@id/title_mode"/>

        <TextView
            android:id="@+id/title_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TexContent"
            android:text="@string/history"
            app:layout_constraintTop_toBottomOf="@id/title_mode"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="@string/cpu_win"
            app:layout_constraintStart_toEndOf="@id/title_history"
            app:layout_constraintTop_toTopOf="@id/title_history"
            app:layout_constraintBottom_toBottomOf="@id/title_history"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>