<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivMain"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="110dp">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Bermain Melawan Player/Komputer!"
        app:layout_constraintTop_toBottomOf="@id/ivMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivBatuGuntingKertas">

    </TextView>

    <ImageView
        android:id="@+id/ivBatuGuntingKertas"
        android:layout_margin="16dp"
        android:layout_width="224dp"
        android:layout_height="224dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_enjoy">
    </ImageView>

    <TextView
        android:id="@+id/tvBatuGuntingKertas"
        android:layout_margin="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Batu Gunting Kertas"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/ivBatuGuntingKertas"
        app:layout_constraintTop_toBottomOf="@id/ivBatuGuntingKertas"
        app:layout_constraintEnd_toEndOf="@id/ivBatuGuntingKertas">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>