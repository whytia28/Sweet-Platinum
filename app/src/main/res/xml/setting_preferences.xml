<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="notification_category"
        app:title="@string/notification">

        <SwitchPreference
            app:key="reminder_switch"
            app:title="@string/enable_reminder" />

        <Preference
            app:key="reminder_time"
            app:summary="09.00"
            app:title="@string/set_reminder" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="language_category"
        app:title="@string/language">

        <Preference
            app:key="language"
            app:title="@string/change_language" />

    </PreferenceCategory>

</PreferenceScreen>