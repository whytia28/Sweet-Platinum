<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="notification_category"
        android:title="@string/notification">

        <SwitchPreference
            android:key="reminder_switch"
            android:title="@string/enable_reminder" />

        <Preference
            android:key="reminder_time"
            android:summary="09.00"
            android:title="@string/set_reminder" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="language_category"
        android:title="@string/language">

        <Preference
            android:key="language"
            android:title="@string/change_language" />

    </PreferenceCategory>

</PreferenceScreen>